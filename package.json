{
  "name": "drift",
  "version": "1.0.0-dev",
  "description": "Automated video transcoding app powered by HandBrakeCLI",
  "main": "./out/main/index.mjs",
  "author": "wwsean08",
  "license": "MIT",
  "homepage": "https://github.com/wwsean08/drift",
  "scripts": {
    "generate-licenses": "node scripts/generate-licenses.mjs",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "npm run generate-licenses && electron-vite dev",
    "build": "npm run generate-licenses && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run generate-licenses && electron-vite build && electron-builder --mac",
    "build:linux": "npm run generate-licenses && electron-vite build && electron-builder --linux",
    "publish:win": "npm run build && electron-builder --win --publish always",
    "publish:mac": "npm run generate-licenses && electron-vite build && electron-builder --mac --publish always",
    "publish:linux": "npm run generate-licenses && electron-vite build && electron-builder --linux --publish always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "chokidar": "^5.0.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.8.3",
    "handbrake-js": "^7.1.0",
    "lucide-react": "^0.575.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^22.19.11",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^39.6.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
